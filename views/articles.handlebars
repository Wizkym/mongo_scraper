<div class="container">
    <div class="row">
        {{#each article}}
            <div class="col">
                <div class="card">
                    <div class="card-image">
                        <img src={{ imgLink }}>
                        <a class="btn-floating halfway-fab waves-effect waves-light red"><i class="material-icons" data-id={{ _id }}>add</i></a>
                    </div>
                    <div class="card-content">
                        <span class="card-title">{{ title }}</span>
                        <p>{{ summary }}</p>
                    </div>
                    <div class="card-action">
                        <a href={{ link }}>Link to Article</a>
                    </div>
                </div>
        </div>
        {{/each}}
    </div>
</div>
