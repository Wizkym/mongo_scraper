<div class="container">
    <div class="row">
        {{#each article}}
            <div class="col">
                <div class="card">
                    <div class="card-image">
                        <img src={{ imgLink }}>
                        <a href="/articles/{{ _id }}" id="article-btn"  class="btn-floating halfway-fab waves-effect waves-light purple"><i class="material-icons">pageview</i></a>
                    </div>
                    <div class="card-content">
                        <span class="card-title">{{ title }}</span>
                        <p>{{ summary }}</p>
                    </div>
                    <div class="card-action">
                        <a href={{ link }}>Link to Article</a>
                    </div>
                </div>
        </div>
        {{/each}}
    </div>
</div>
